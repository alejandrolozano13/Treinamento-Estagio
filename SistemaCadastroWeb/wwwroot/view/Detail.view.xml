<mvc:View xmlns:core="sap.ui.core"
    controllerName="sap.ui.demo.cadastro.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>TituloDetalhes}" binding="{path: 'clientes>/'}"
        showNavButton="true" navButtonPress=".aoRetroceder">
        <headerContent>
            <Button 
                text="{i18n>editar}"
                icon="sap-icon://edit"
                press=".aoEditarCliente"/>
            <Button 
                text="Remover Cliente"
                icon="sap-icon://delete"
                press=".aoRemoverCliente"/>
        </headerContent>
        <Image src="{clientes>imagemUsuarioTraduzido}" width="1600px" height="425px"/>
        <ObjectHeader            
            icon="sap-icon://employee-lookup"
            title="{clientes>nome}"/>
            <ObjectAttribute text="{i18n>Telefone} {clientes>telefone}" class="sapUiLargeMargin sapUiLargeFont"/>
            <ObjectAttribute text="{i18n>email} {clientes>email}" class="sapUiLargeMargin sapUiLargeFont"/>
            <ObjectAttribute text="{i18n>cpf} {clientes>cpf}" class="sapUiLargeMargin sapUiLargeFont"/>
            <ObjectAttribute text="{i18n>data} {clientes>data}" class="sapUiLargeMargin sapUiLargeFont"/>
            
    </Page>
</mvc:View>