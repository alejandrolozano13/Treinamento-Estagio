<mvc:View xmlns:core="sap.ui.core"
    controllerName="sap.ui.demo.cadastro.controller.Detalhes"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Shell >
    <Page title="{i18n>TituloDetalhes}" binding="{path: 'clientes>/'}"
        showNavButton="true" navButtonPress=".aoRetroceder">
        <headerContent>
            <Button 
                text="{i18n>editar}"
                icon="sap-icon://edit"
                press=".aoEditarCliente"/>
            <Button 
                text="Remover Cliente"
                icon="sap-icon://delete"
                press=".aoRemoverCliente"/>
        </headerContent>
        <VBox alignItems="Center">
            <HBox>
                <Image src="{clientes>imagemUsuarioTraduzido}" width="1050px" height="450px" class="sapUiLargeMargin sapUiLargeMarginTop"/>
            </HBox>
        </VBox>

        <VBox alignItems="Center" alignContent="Center">
            <HBox alignContent="Center" alignItems="Center">
                <ObjectAttribute text="Nome: {clientes>nome}" class="sapUiTinyMargin sapUiLargeFont"/>
            </HBox>
            <HBox alignContent="Center" alignItems="Center">
                <ObjectAttribute text="{i18n>Telefone} {clientes>telefone}" class="sapUiTinyMargin sapUiLargeFont"/>
            </HBox>
            <HBox alignContent="Center" alignItems="Center">
                <ObjectAttribute text="{i18n>email} {clientes>email}" class="sapUiTinyMargin sapUiLargeFont"/>
            </HBox>
            <HBox alignContent="Center" alignItems="Center">
                <ObjectAttribute text="{i18n>cpf} {clientes>cpf}" class="sapUiTinyMargin sapUiLargeFont"/>
           </HBox>
           <HBox alignContent="Center" alignItems="Center">
                <ObjectAttribute text="{
                    path: 'clientes>data',
                    type: 'sap.ui.model.type.Date',
                    formatOptions:  
                    {source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
            </HBox>
        </VBox>
    </Page>
    </Shell>
</mvc:View>