<mvc:View xmlns:tnt="sap.tnt"
    controllerName="sap.ui.demo.cadastro.controller.App"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <List id="ListaClientes" items="{path: 'clientes>/'}">
        <headerToolbar>
            <Toolbar>
                <Button text="Adicionar Cliente" icon="sap-icon://add-employee" press=".aoAdicionarCliente"/>
                <ToolbarSpacer/>
                <SearchField width= "60%" search=".aoPesquisarClientes"/>
                <ToolbarSpacer/>
            </Toolbar>
        </headerToolbar>
        <CustomListItem class="sapUiSmallMargin">
            <HBox>
                <VBox class="sapUiSmallMargin">
                    <Link text="{clientes>nome}"/>
                    <Label text="{
                    path: 'clientes>data',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {style : 'full', 
                    source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</mvc:View>